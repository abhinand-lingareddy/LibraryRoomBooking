<head>
<style>
td	{padding: 5px}
</style>
</head>

<h1>Admins</h1>

<p>
<%= link_to 'Create New Admin', new_admin_path %>
</p>

<table>
  <tr>
    <th>Email</th>
    <th>Name</th>
  </tr>
 
  <% @admins.each do |admin| %>
    <tr>
      <td><%= admin.email %></td>
      <td><%= admin.name %></td>
      <td><%= link_to 'Profile', admin_path(admin) %></td>
	  <td><%= link_to 'Delete', admin_path(admin),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>