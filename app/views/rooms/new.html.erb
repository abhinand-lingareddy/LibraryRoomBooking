<%= render 'sessions/notice' %>
<h1>Create Room</h1>
<%= form_for :room, url: rooms_path do |f| %>


    <% if @room.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@room.errors.count, "error") %> prohibited
            this article from being saved:
          </h2>
          <ul>
            <% @room.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <p>
      <%= f.label "Room Number" %>:
      <%= f.text_field :roomnumber %>
    </p>

    <p>
      <%= f.label "Building Name" %>:
      <%= f.select :buildingname,{"James B Hunt"=>:hunt,"D H Hill"=>:hill} %>
    </p>

    <p>
      <%= f.label "Capacity" %>:
      <%= f.select :capacity,{"Small - 4 chairs"=>:small,"Medium - 6 chairs"=>:mediumm,"Large - 12 chairs"=>:large} %>
    </p>

    <p>
      <%= f.submit "Create Room"%>
    </p>
<% end %>

<%= link_to 'Back', rooms_path %>