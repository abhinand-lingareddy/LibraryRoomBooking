<p>
  <strong>RoomNumber:</strong>
  <%= @room.roomnumber %>
</p>

<p>
  <strong>BuildingName:</strong>
  <%= @room.buildingname %>
</p>

<p>
  <strong>Capacity:</strong>
  <%= @room.capacity %>

<h2>Comments</h2>
<% @room.bookings.each do |booking| %>
    <p>
      <strong>RoomNumber:</strong>
      <%=@room.roomnumber %>
    </p>

    <p>
      <strong>UserId:</strong>
      <%= booking.user_id %>
    </p>
    <p>
      <strong>Date:</strong>
      <%= booking.date %>
    </p>
    <p>
      <strong>starttime:</strong>
      <%= booking.endtime-2%>
    </p>
    <p>
      <strong>endtime:</strong>
      <%= booking.endtime%>
    </p>
    <% if session["userid"] == booking.user_id or session["admin"] %>
    <td><%= link_to 'Delete',[booking.room, booking],
                    method: :delete,
                    data: { confirm: 'Are you sure?' } %></td>
    <% end %>
<% end %>



  <%= form_for([@room, @room.bookings.build]) do |f| %>
<p>
  Date: <%= select_tag "date", options_for_select(@date) %><br><br>
  Time: <%= select_tag "time", options_for_select(@time) %>
</p>
<p>
  <%= f.submit "Book Room"%>
</p>

<% end %>




