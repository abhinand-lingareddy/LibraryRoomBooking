<%= render 'notice' %>
<h2>Home Page</h2>
<p><%= link_to 'Logout', sessions_logout_path%></p>

<br>
<h3>Profile</h3>
<ul>
  <li><%= link_to 'View Profile', User.find(session[:user_id])%></li>
  <li><%= link_to 'Edit Profile', edit_user_path(User.find(session[:user_id]))%></li>
</ul>

<% if session[:user_id] && session[:admin]%>
    <br>
    <h3>Manage Users</h3>
    <ul>
      <li><%= link_to 'List All Users', users_path%></li>
      <li><%= link_to 'List Admins', users_list_admins_path%></li>
      <li><%= link_to 'List Members', users_list_members_path%></li><br>

      <li><%= link_to 'Create New User', new_user_path%></li>
    </ul>
    <br>
<% end %>
<br>
<h3>Booking Rooms</h3>
<ul>
<li>
<% if session[:user_id] && session[:admin]%>
    <%= link_to 'Manage Rooms', rooms_path%>
<% else %>
    <%= link_to 'Search/Book Rooms', rooms_path%>
<% end %>
</li>
<li><%= link_to 'Booking History', '/users/history'%></li>
</ul>
